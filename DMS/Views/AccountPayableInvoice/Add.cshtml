@model DMS.Models.ViewModels.AccountPayableInvoiceViewModel

<h1 style="font-family: Garamond;">
    Add 
</h1>
<form method="post" action="Add">
    <div class="form-group">
        <label for="Id">Id:</label>
        <input type="text" class="form-control" id="Id" asp-for="Id" required>
        <div class="invalid-feedback">
            Please enter a valid ID.
        </div>
    </div>
    <div class="form-group">
        <label for="UserId">User Id:</label>
        <input type="text" class="form-control" id="UserId" asp-for="UserId" required>
        <div class="invalid-feedback">
            Please enter a valid Users Id.
        </div>
    </div>
    <div class="form-group">
        <label for="VendorId">Vendor Id:</label>
        <input type="text" class="form-control" id="VendorId" asp-for="VendorId" required>
        <div class="invalid-feedback">
            Please enter a Vendor Id.
        </div>
    </div>
    <div class="form-group">
        <label for="PurchaseOrderDeliveryId">PurchaseOrderDeliveryId:</label>
        <input type="text" class="form-control" id="PurchaseOrderDeliveryId" asp-for="PurchaseOrderDeliveryId" required>
        <div class="invalid-feedback">
            Please enter a Valid Purchase Order Delivery Id.
        </div>
    </div>
    <div class="form-group">
        <label for="BillReceivedDate">Bill Received Date:</label>
        <input type="date" class="form-control" id="BillReceivedDate" asp-for="BillReceivedDate" required>
        <div class="invalid-feedback">
            Please enter a Valid Bill Received Date.
        </div>
    </div>
    <div class="form-group">
        <label for="Description">Description:</label>
        <input type="text" class="form-control" id="Description" asp-for="Description" required>
        <div class="invalid-feedback">
            Please enter a Description.
        </div>
    </div>
    <div class="form-group">
        <label for="EntryDate">Entry Date:</label>
        <input type="date" class="form-control" id="EntryDate" asp-for="EntryDate" required>
        <div class="invalid-feedback">
            Please enter a Entry Date.
        </div>
    </div>
    <div class="form-group">
        <label for="Totalamount">Total Amount:</label>
        <input type="text" class="form-control" id="Totalamount" asp-for="Totalamount" required>
        <div class="invalid-feedback">
            Please enter Total Amount.
        </div>
    </div>
        <button style="background-color:orangered" type="submit" class="btn btn-primary mt-2">Create</button>
</form>
