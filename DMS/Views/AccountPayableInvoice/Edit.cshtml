@model DMS.Models.ViewModels.AccountPayableInvoiceViewModel

<h1 style="font-family: Garamond;">
    Edit 
</h1>
<form method="post" action="Edit">
    <div class="form-group">
        <input type="hidden" class="form-control" id="Id" asp-for="Id" required>
        <input type="hidden" class="form-control" id="Active" asp-for="IsActive" required>
        <label for="Id">ID:</label>
        <input type="text" class="form-control" id="Id" asp-for="Id" required>
        <div class="invalid-feedback">
            Please enter a valid Id.
        </div>
    </div>
    <div class="form-group">
        <label for="">UserId:</label>
        <input type="text" class="form-control" id="UserId" asp-for="UserId" required>
        <div class="invalid-feedback">
            Please enter a valid UserId.
        </div>
    </div>
    <div class="form-group">
        <label for="VendorId">Vendor Id:</label>
        <input type="text" class="form-control" id="VendorId" asp-for="VendorId" required>
        <div class="invalid-feedback">
            Please enter a valid Vendor Id.
        </div>
    </div>
    <div class="form-group">
        <label for="PurchaseOrderDeliveryId">PurchaseOrderDeliveryId:</label>
        <input type="PurchaseOrderDeliveryId" class="form-control" id="PurchaseOrderDeliveryId" asp-for="PurchaseOrderDeliveryId" required>
        <div class="invalid-feedback">
            Please enter a Purchase Order Delivery Id.
        </div>
    </div>
    <div class="form-group">
        <label for="BillReceivedDate">BillReceivedDate:</label>
        <input type="date" class="form-control" id="BillReceivedDate" asp-for="BillReceivedDate" required>
        <div class="invalid-feedback">
            Please enter a valid Bill Received Date.
        </div>
    </div>
    <div class="form-group">
        <label for="Description">Description:</label>
        <input type="text" class="form-control" id="Description" asp-for="Description" required>
        <div class="invalid-feedback">
            Please enter a Description.
        </div>
    </div>
    <div class="form-group">
        <label for="EntryDate">EntryDate:</label>
        <input type="date" class="form-control" id="EntryDate" asp-for="EntryDate" required>
        <div class="invalid-feedback">
            Please enter a valid Entry Date.
        </div>
    </div>
    <div class="form-group">
        <label for="Totalamount">Totalamount:</label>
        <input type="text" class="form-control" id="Totalamount" asp-for="Totalamount" required>
        <div class="invalid-feedback">
            Please enter a Total Amount.
        </div>
    </div>
    <button style="background-color:orangered" type="submit" class="btn btn-primary mt-2">Update</button>
    <button type="submit" class="btn btn-danger mt-2" asp-action="Delete" asp-controller="Customer">Delete</button>
</form>