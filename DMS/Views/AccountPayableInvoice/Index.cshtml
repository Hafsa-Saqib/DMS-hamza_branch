@model List<DMS.Models.DomainModels.AccountPayableInvoice>


<div class="container">
    <a class="btn btn-primary" asp-controller="AccountPayableInvoice" asp-action="Add"
       style="background-color:darkcyan">Add AccountPayableInvoive</a>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th class="bg-primary text-white">Id</th>
                <th class="bg-primary text-white">UserId</th>
                <th class="bg-primary text-white">VendorId</th>
                <th class="bg-primary text-white">PurchaseOrderDeliveryId</th>
                <th class="bg-primary text-white">BillReceivedDate</th>
                <th class="bg-primary text-white">Description</th>
                <th class="bg-primary text-white">EntryDate</th>
                <th class="bg-primary text-white">Totalamount</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var APIC in Model)
            {
                <tr>
                    <td>@APIC.Id</td>
                    <td>@APIC.UserId</td>
                    <td>@APIC.VendorId</td>
                    <td>@APIC.PurchaseOrderDeliveryId</td>
                    <td>@APIC.BillReceivedDate</td>
                    <td>@APIC.Description</td>
                    <td>@APIC.EntryDate</td>
                    <td>@APIC.Totalamount</td>
                    <td><a href="AccountPayableInvoice/Edit/@APIC.Id">Edit</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
<style>
    th {
        font-weight: bold;
        text-align: center;
        vertical-align: middle;
    }

    td {
