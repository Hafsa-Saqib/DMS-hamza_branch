@model DMS.Models.ViewModels.BookerViewModel;

<h1 style="font-family: Garamond;">
    Add Booker
</h1>
<form method="post" action="Add">
    <div class="form-group">
        <label for="Name">Name:</label>
        <input type="text" class="form-control" id="Name" asp-for="Name" required>
        <div class="invalid-feedback">
            Please enter a valid name.
        </div>
    </div>
    <div class="form-group">
        <label for="Phone">Phone:</label>
        <input type="tel" class="form-control" id="Phone" asp-for="Phone" required>
        <div class="invalid-feedback">
            Please enter a valid Phone Number.
        </div>
    </div>
    <div class="form-group">
        <label for="Address">Address:</label>
        <input type="Address" class="form-control" id="Address" asp-for="Address" required>
        <div class="invalid-feedback">
            Please enter a valid Address.
        </div>
    </div>
    <div class="form-group">
        <label for="CNIC">CNIC:</label>
        <input type="text" class="form-control" id="CNIC" asp-for="CNIC" required>
        <div class="invalid-feedback">
            Please enter a valid CNIC.
        </div>
    </div>
    <div class="form-group">
        <label for="Area">Area:</label>
        <input type="text" class="form-control" id="Area" asp-for="Area" required>
        <div class="invalid-feedback">
            Please enter a valid Area.
        </div>
    </div>
    <div class="form-group">
        <label for="JoinDate">JoinDate:</label>
        <input type="date" class="form-control" id="JoinDate" asp-for="JoinDate" required>
        <div class="invalid-feedback">
            Please enter a valid Date.
        </div>
    </div>
    <div class="form-group">
        <label for="LeaveDate">LeaveDate:</label>
        <input type="date" class="form-control" id="LeaveDate" asp-for="LeaveDate" required>
        <div class="invalid-feedback">
            Please enter a valid Date.
        </div>
    </div>
    <button style="background-color:orangered" type="submit" class="btn btn-primary mt-2">Create</button>
</form>
