@model DMS.Models.ViewModels.CustomerViewModel

<h1 style="font-family: Garamond;">
    Edit Customer
    </h1>
<form method="post" action="Edit">
    <div class="form-group">
        <input type="hidden" class="form-control" id="Id" asp-for="Id" required>
        <input type="hidden" class="form-control" id="Active" asp-for="IsActive" required>
        <label for="Name">Name:</label>
        <input type="text" class="form-control" id="Name" asp-for="Name" required>
        <div class="invalid-feedback">
            Please enter a valid name.
        </div>
    </div>
    <div class="form-group">
        <label for="Email">Email:</label>
        <input type="email" class="form-control" id="Email" asp-for="Email" required>
        <div class="invalid-feedback">
            Please enter a valid email address.
        </div>
    </div>
    <div class="form-group">
        <label for="Phone">Phone:</label>
        <input type="tel" class="form-control" id="Phone" asp-for="Phone" required>
        <div class="invalid-feedback">
            Please enter a valid phone number.
        </div>
    </div>
    <div class="form-group">
        <label for="Address">Address:</label>
        <input type="text" class="form-control" id="Address" asp-for="Address" required>
        <div class="invalid-feedback">
            Please enter a valid address.
        </div>
    </div>
    <div class="form-group">
        <label for="CustomerCategory">CustomerCategory:</label>
        @*<input type="text" class="form-control" id="CustomerCategory" asp-for="CustomerCategory" required>*@
        <select class="form-control" id="CustomerCategory" name="CustomerCategory">
            <option value="">-- CustomerCategory --</option>
            @foreach (var CC in ViewBag.CustomerCategory)
            {
                <option value="@CC.Value">@CC.Text</option>
            }
        </select>
        <div class="invalid-feedback">
            Please enter a valid Customer Category.
        </div>
    </div>
    <div class="form-group">
        <label for="NTN">NTN:</label>
        <input type="text" class="form-control" id="NTN" asp-for="NTN" required>
        <div class="invalid-feedback">
            Please enter a valid NTN Number.
        </div>
    </div>
    <div class="form-group">
        <label for="CompNo">CompNo:</label>
        <input type="text" class="form-control" id="CompNo" asp-for="CompNo" required>
        <div class="invalid-feedback">
            Please enter a valid Company Number.
        </div>
    </div>
    <button style="background-color:orangered" type="submit" class="btn btn-primary mt-2">Update</button>
    <button type="submit" class="btn btn-danger mt-2" asp-action="Delete" asp-controller="Customer">Delete</button>
</form>

