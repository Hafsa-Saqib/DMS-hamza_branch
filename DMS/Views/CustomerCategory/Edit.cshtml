@model DMS.Models.ViewModels.CustomerCategoryViewModel

<h1 style="font-family: Garamond;">
    Edit 
</h1>
<form method="post" action="Edit">
    <div class="form-group">
        <input type="hidden" class="form-control" id="Id" asp-for="Id" required>
        <input type="hidden" class="form-control" id="Active" asp-for="IsActive" required>
        <label for="Id">Id:</label>
        <input type="text" class="form-control" id="Id" asp-for="Id" required>
        <div class="invalid-feedback">
            Please enter a valid ID.
        </div>
    </div>
    <div class="form-group">
        <label for="Name">Name:</label>
        <input type="text" class="form-control" id="Name" asp-for="Name" required>
        <div class="invalid-feedback">
            Please enter a valid Name.
        </div>
    </div>
    <div class="form-group">
        <label for="Description">Description:</label>
        <input type="text" class="form-control" id="Description" asp-for="Description" required>
        <div class="invalid-feedback">
            Please enter a Description.
        </div>
    </div>
    <div class="form-group">
        <label for="CategoryId">Category ID:</label>
        <input type="text" class="form-control" id="CategoryId" asp-for="CategoryId" required>
        <div class="invalid-feedback">
            Please enter a Valid Category ID.
        </div>
    </div>
    <div class="form-group">
        <label for="ReceivableAccountId">ReceivableAccountId:</label>
        <input type="text" class="form-control" id="ReceivableAccountId" asp-for="ReceivableAccountId" required>
        <div class="invalid-feedback">
            Please enter a Valid Receivable Account ID.
        </div>
    </div>
    <div class="form-group">
        <label for="RevenueaccountId">RevenueaccountId:</label>
        <input type="text" class="form-control" id="RevenueaccountId" asp-for="RevenueaccountId" required>
        <div class="invalid-feedback">
            Please enter a Revenue account Id.
        </div>
    </div>
    <button style="background-color:orangered" type="submit" class="btn btn-primary mt-2">Update</button>
    <button type="submit" class="btn btn-danger mt-2" asp-action="Delete" asp-controller="Customer">Delete</button>
</form>