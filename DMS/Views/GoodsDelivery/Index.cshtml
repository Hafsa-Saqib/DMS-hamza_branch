@model List<DMS.Models.DomainModels.GoodsDelivery>


<div class="container">
    <a class="btn btn-primary" asp-controller="GoodsDelivery" asp-action="Add"
       style="background-color:darkcyan">Add Products</a>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th class="bg-primary text-white">Id</th>
                <th class="bg-primary text-white">SalesOrderId</th>
                <th class="bg-primary text-white">UserId</th>
                <th class="bg-primary text-white">SalesManId</th>
                <th class="bg-primary text-white">WarehouseId</th>
                <th class="bg-primary text-white">Description</th>
                <th class="bg-primary text-white">DeliveryDate</th>
                <th class="bg-primary text-white">EntryDate</th>
                <th class="bg-primary text-white">IsPosted</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var gd in Model)
            {
                <tr>
                    <td>@gd.Id</td>
                    <td>@gd.SalesOrderId</td>
                    <td>@gd.UserId</td>
                    <td>@gd.SalesManID</td>
                    <td>@gd.WarehouseId</td>
                    <td>@gd.Description</td>
                    <td>@gd.DeliveryDate</td>
                    <td>@gd.EntryDate</td>
                    <td>@gd.IsPosted</td>
                    <td><a href="Customer/Edit/@gd.Id">Edit</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
<style>
    th {
        font-weight: bold;
        text-align: center;
        vertical-align: middle;
    }

    td {
