@model List<DMS.Models.DomainModels.PurchaseOrder>


<div class="container">
    <a class="btn btn-primary" asp-controller="PurchaseOrder" asp-action="Add"
       style="background-color:darkcyan">Add</a>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th class="bg-primary text-white">Id</th>
                <th class="bg-primary text-white">UserId</th>
                <th class="bg-primary text-white">VendorId</th>
                <th class="bg-primary text-white">Description</th>
                <th class="bg-primary text-white">OrderDate</th>
                <th class="bg-primary text-white">EntryDate</th>
                <th class="bg-primary text-white">TotalPrice</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var purchaseOrder in Model)
            {
                <tr>
                    <td>@purchaseOrder.Id</td>
                    <td>@purchaseOrder.UserId</td>
                    <td>@purchaseOrder.VendorId</td>
                    <td>@purchaseOrder.Description</td>
                    <td>@purchaseOrder.OrderDate</td>
                    <td>@purchaseOrder.EntryDate</td>
                    <td>@purchaseOrder.TotalPrice</td>
                    <td><a href="PurchaseOrder/Edit/@purchaseOrder.Id">Edit</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
<style>
    th {
        font-weight: bold;
        text-align: center;
        vertical-align: middle;
    }

    td {
        text-align: center;
