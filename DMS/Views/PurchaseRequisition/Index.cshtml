@model List<DMS.Models.DomainModels.PurchaseRequisition>


<div class="container">
    <a class="btn btn-primary" asp-controller="PurchaseRequisition" asp-action="Add"
       style="background-color:darkcyan">Add</a>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th class="bg-primary text-white">Id</th>
                <th class="bg-primary text-white">Description</th>
                <th class="bg-primary text-white">Fullfill</th>
                <th class="bg-primary text-white">EntryDate</th>
                <th class="bg-primary text-white">UserId</th>
                <th class="bg-primary text-white">ProductId</th>
                <th class="bg-primary text-white">ProductQuantity</th>
                <th class="bg-primary text-white">Approved</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var PR in Model)
            {
                <tr>
                    <td>@PR.Id</td>
                    <td>@PR.Description</td>
                    <td>@PR.Fullfill</td>
                    <td>@PR.EntryDate</td>
                    <td>@PR.UserId</td>
                    <td>@PR.ProductId</td>
                    <td>@PR.ProductQuantity</td>
                    <td>@PR.Approved</td>
                    <td><a href="PurchaseRequisition/Edit/@PR.Id">Edit</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
