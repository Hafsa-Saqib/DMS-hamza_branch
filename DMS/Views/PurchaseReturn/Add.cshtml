@model DMS.Models.ViewModels.PurchaseReturnViewModel;

<h1 style="font-family: Garamond;">
    Add 
</h1>
<form method="post" action="Add">
    <div class="form-group">
        <label for="Id">Id:</label>
        <input type="text" class="form-control" id="Id" asp-for="Id" required>
        <div class="invalid-feedback">
            Please enter a valid ID.
        </div>
    </div>
    <div class="form-group">
        <label for="VendorId">Vendor Id:</label>
        <input type="text" class="form-control" id="VendorId" asp-for="VendorId" required>
        <div class="invalid-feedback">
            Please enter a valid Vendor Id.
        </div>
    </div>
    <div class="form-group">
        <label for="Reason">Reason:</label>
        <input type="text" class="form-control" id="Reason" asp-for="Reason" required>
        <div class="invalid-feedback">
            Please enter a valid Reason.
        </div>
    </div>
    <div class="form-group">
        <label for="EntryDate">Entry Date:</label>
        <input type="date" class="form-control" id="EntryDate" asp-for="EntryDate" required>
        <div class="invalid-feedback">
            Please enter a Valid Entry Date.
        </div>
    </div>
    <div class="form-group">
        <label for="WarehouseId">Warehouse ID:</label>
        <input type="text" class="form-control" id="WarehouseId" asp-for="WarehouseId" required>
        <div class="invalid-feedback">
            Please enter a Valid Warehouse Id.
        </div>
    </div>
    <div class="form-group">
        <label for="UserId">UserId:</label>
        <input type="text" class="form-control" id="UserId" asp-for="UserId" required>
        <div class="invalid-feedback">
            Please enter a User ID.
        </div>
    </div>
      <button style="background-color:orangered" type="submit" class="btn btn-primary mt-2">Create</button>
</form>
