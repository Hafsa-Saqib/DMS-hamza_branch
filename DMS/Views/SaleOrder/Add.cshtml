@model DMS.Models.ViewModels.SaleOrderViewModel

<h1 style="font-family: Garamond;">
    Add
</h1>
<form method="post" action="Edit">
    <div class="form-group">
        <input type="hidden" class="form-control" id="Id" asp-for="SaleOrderID" required>
