@model List<DMS.Models.DomainModels.SaleOrder>


<div class="container">
    <a class="btn btn-primary" asp-controller="SaleOrder" asp-action="Add"
       style="background-color:orange">CreateSaleOder</a>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th class="bg-primary text-white">UserID</th>
                <th class="bg-primary text-white">CustomerID</th>
                <th class="bg-primary text-white">BookerID</th>
                <th class="bg-primary text-white">Description</th>
                <th class="bg-primary text-white">OrderDate</th>
                <th class="bg-primary text-white">EntryDate</th>
                <th class="bg-primary text-white">TotalPrice</th>
                <th class="bg-primary text-white">SOID</th>
                <th class="bg-primary text-white">ProductID</th>
                <th class="bg-primary text-white">ProductQuantity</th>
                <th class="bg-primary text-white">QuantityRemaining</th>
                <th class="bg-primary text-white">Amount</th>
                <th class="bg-primary text-white">IsActive</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var SaleOrder in Model)
            {
                <tr>
                    <td>@SaleOrder.UserID</td>    
                    <td>@SaleOrder.CustomerID</td>
                    <td>@SaleOrder.BookerID</td>
                    <td>@SaleOrder.Description</td>
                    <td>@SaleOrder.OrderDate</td>
                    <td>@SaleOrder.EntryDate</td>
                    <td>@SaleOrder.TotalPrice</td>
                    <td>@SaleOrder.Id</td>
                    <td>@SaleOrder.ProductID</td>
                    <td>@SaleOrder.ProductQuantity</td>
                    <td>@SaleOrder.QuantityRemaining</td>
                    <td>@SaleOrder.Amount</td>
                    <td>@SaleOrder.IsActive</td>
                    <td><a href="Product/Edit/@SaleOrder.Id">Edit</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
