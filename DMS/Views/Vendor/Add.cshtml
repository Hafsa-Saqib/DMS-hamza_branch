@model DMS.Models.ViewModels.VendorViewModel;

<h1 style="font-family: Garamond;">
    Add Vendor
</h1>
<form method="post" action="Add">
    <div class="form-group">
        <label for="Name">Name:</label>
        <input type="text" class="form-control" id="Name" asp-for="Name" required>
        <div class="invalid-feedback">
            Please enter a valid name.
        </div>
    </div>
    <div class="form-group">
        <label for="Email">Email:</label>
        <input type="email" class="form-control" id="Email" asp-for="Email" required>
        <div class="invalid-feedback">
            Please enter a valid email address.
        </div>
    </div>
    <div class="form-group">
        <label for="Phone">Phone:</label>
        <input type="tel" class="form-control" id="Phone" asp-for="Phone" required>
        <div class="invalid-feedback">
            Please enter a valid phone number.
        </div>
    </div>
    <div class="form-group">
        <label for="Address">Address:</label>
        <input type="text" class="form-control" id="Address" asp-for="Address" required>
        <div class="invalid-feedback">
            Please enter a valid address.
        </div>
    </div>
    <div class="form-group">
        <label for="VendorCategory">VendorCategory:</label>
        <input type="text" class="form-control" id="VendorCategory" asp-for="VendorCategory" required>
        <div class="invalid-feedback">
            Please enter a valid address.
        </div>
    </div>
    <div class="form-group">
        <label for="NTN">NTN:</label>
        <input type="text" class="form-control" id="NTN" asp-for="NTN" required>
        <div class="invalid-feedback">
            Please enter a valid address.
        </div>
    </div>
    <div class="form-group">
        <label for="CompNo">CompNo:</label>
        <input type="text" class="form-control" id="CompNo" asp-for="CompNo" required>
        <div class="invalid-feedback">
            Please enter a valid address.
        </div>
    </div>
    <button style="background-color:orangered" type="submit" class="btn btn-primary mt-2">Create</button>
</form>
