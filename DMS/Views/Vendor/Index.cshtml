@model List<DMS.Models.DomainModels.Vendor>


<div class="container">
    <a class="btn btn-primary" asp-controller="Vendor" asp-action="Add"
       style="background-color:orange">Add Vendor</a>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th class="bg-primary text-white">Name</th>
                <th class="bg-primary text-white">Email</th>
                <th class="bg-primary text-white">Phone</th>
                <th class="bg-primary text-white">Address</th>
                <th class="bg-primary text-white">VendorCategory</th>
                <th class="bg-primary text-white">NTN</th>
                <th class="bg-primary text-white">CompNo</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var vendor in Model)
            {
                <tr>
                    <td>@vendor.Name</td>
                    <td>@vendor.Email</td>
                    <td>@vendor.Phone</td>
                    <td>@vendor.Address</td>
                    <td>@vendor.VendorCategory</td>
                    <td>@vendor.NTN</td>
                    <td>@vendor.CompNo</td>
                    <td><a href="Vendor/Edit/@vendor.Id">Edit</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
<style>
    th {
        font-weight: bold;
        text-align: center;
        vertical-align: middle;
    }

    td {
        text-align: center;
